    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculadora\nde\n Gorjeta"
        android:gravity="center_horizontal"
        android:fontFamily="@font/font_3"
        android:textColor="@color/white"
